        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:text="@string/txt_fabricante"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cajaModelosIDModeloModificar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="288dp"
        android:text="@string/txt_numero_cilindros"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cajaModelosIDModeloModificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="344dp"
        android:text="@string/txt_numero_puertas"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cajaModelosIDModeloModificar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cajaModelosIDModeloModificar"
        android:layout_width="276dp"
        android:layout_height="59dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:hint="@string/txt_id_modelo"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView59"
        app:layout_constraintTop_toBottomOf="@+id/textView58" />

    <EditText
        android:id="@+id/cajaModelosNombreModificar"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="@string/txt_nombre_modelo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView69"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosIDModeloModificar" />

    <EditText
        android:id="@+id/cajaModelosFabricanteModificar"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="@string/txt_fabricante"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView70"
        app:layout_constraintTop_toBottomOf="@+id/spinnerModelosAnioModificar" />

    <Spinner
        android:id="@+id/spinnerModelosAnioModificar"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="23dp"

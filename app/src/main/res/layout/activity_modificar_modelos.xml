        app:layout_constraintTop_toBottomOf="@+id/cajaModelosNombreModificar" />

    <Spinner
        android:id="@+id/spinnerModelosCilindrosModificar"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="23dp"
        android:entries="@array/lista_cilindros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView71"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosFabricanteModificar" />

    <EditText
        android:id="@+id/cajaModelosPuertasModificar"
        android:layout_width="272dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="@string/txt_numero_puertas"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView76"
        app:layout_constraintTop_toBottomOf="@+id/spinnerModelosCilindrosModificar" />

    <EditText
        android:id="@+id/cajaModelosPasajerosModificar"
        android:layout_width="272dp"
        android:layout_height="57dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:hint="@string/txt_capacidad_pasajeros"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosPesoModificar" />

    <EditText
        android:id="@+id/cajaModelosPesoModificar"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/txt_peso"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView76"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosPuertasModificar" />

    <Button
        android:id="@+id/btnModelosActualizarModificar"
        android:layout_width="121dp"
        android:layout_height="66dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="@color/crema_base"
        android:onClick="actualizarModelo"
        android:text="@string/txt_btn_actualizar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnModelosBuscarModificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosPaisModificar" />

    <Button
        android:id="@+id/btnModelosBuscarModificar"
        android:layout_width="111dp"
        android:layout_height="64dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/crema_base"
        android:onClick="cargarDatos"
        android:text="@string/txt_btn_buscar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnModelosCancelarModificar"
        app:layout_constraintStart_toEndOf="@+id/btnModelosActualizarModificar"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosPaisModificar" />

    <Button
        android:id="@+id/btnModelosCancelarModificar"
        android:layout_width="111dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="@color/crema_base"
        android:onClick="regresarMenu"
        android:text="@string/txt_btn_cancelar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnModelosBuscarModificar"
        app:layout_constraintTop_toBottomOf="@+id/cajaModelosPaisModificar" />

</androidx.constraintlayout.widget.ConstraintLayout>